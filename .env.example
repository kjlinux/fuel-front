# MQTT Configuration (optional - only needed if you have a real MQTT broker)
# Set to 'true' to enable MQTT, 'false' to use simulated data
VITE_MQTT_ENABLED=false

# If MQTT is enabled, configure your broker here
VITE_MQTT_BROKER_URL=
# Examples:
# ws://localhost:8083/mqtt (local development)
# wss://broker.hivemq.com:8884/mqtt (public broker)
VITE_MQTT_HOST=broker.hivemq.com
VITE_MQTT_PORT=8884
VITE_MQTT_USERNAME=
VITE_MQTT_PASSWORD=

# API Configuration (if you have a backend)
VITE_API_URL=http://localhost:3000/api
